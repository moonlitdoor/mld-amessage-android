<?xml version="1.0" encoding="utf-8"?>
<layout>

  <data>

    <import type="android.text.format.DateFormat" />

    <!--    <import type="com.moonlitdoor.amessage.about.BuildConfig" />-->

    <variable
      name="version"
      type="String" />

    <variable
      name="handler"
      type="android.view.View.OnClickListener" />

  </data>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp008">

    <LinearLayout
      android:id="@+id/build"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="@{handler::onClick}"
      android:orientation="vertical">

      <TextView
        style="@style/Text.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_version" />

      <TextView
        style="@style/Text.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="1.0.0" />
      <!--      android:text="{BuildConfig.VERSION_NAME}"-->
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp001"
      android:background="@drawable/item_decoration_divider" />

    <TextView
      style="@style/Text.Primary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/about_build_date" />

    <TextView
      style="@style/Text.Secondary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      tools:text="1.0.0" />
    <!--    android:text="{DateFormat.getDateFormat(context).format(Long.parseLong(BuildConfig.BUILD_DATE))}"-->
    <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp001"
      android:background="@drawable/item_decoration_divider" />

    <LinearLayout
      android:id="@+id/privacy"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="@{handler::onClick}"
      android:orientation="vertical">

      <TextView
        style="@style/Text.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_privacy_policy" />

      <TextView
        style="@style/Text.Secondary.Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_privacy_policy_url"
        tools:text="1.0.0" />

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp001"
      android:background="@drawable/item_decoration_divider" />

  </LinearLayout>

</layout>